camera {
  origin <-1, 3, 3>
  look_at <0, 1, 0>
}

// infinite floor
object {
  plane {
    origin <0, 0, 0>
    normal <0, 1, 0>
  }
  material {
    lambertian texture {
      pattern {
        checkerboard 
        color white 
        color rgb <0.7, 0.7, 1> 
        0.5
      }
    }
  }
}

// light
object {
  sphere {
    origin <0, 10, 0>
    radius 5
  }
  material {
    diffuse_light texture {
      solid color rgb <2, 2, 2>
    }
  }
}

// objects

object {
  union {
    sphere {
      origin <-0.4, 1, 0>
      radius 1
    }
    sphere {
      origin <0.4, 1, 0>
      radius 1
    }
  }
  material {
    dielectric ior 1.5
  }
}
