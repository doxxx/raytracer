object "sky" {
  difference {
    sphere {
      origin <0, -900, 0>
      radius 1000.1
    }
    sphere {
      origin <0, -900, 0>
      radius 1000
    }
  }
  material {
    /*lambertian texture {
      solid color rgb <0.698, 1, 1>
    }*/
    diffuse_light texture {
      solid color rgb <0.698, 1, 1>
    }
  }
}

object "earth" {
  plane {
    origin <0, -0.1, 0>
    normal <0, 1, 0>
  }
  material {
    lambertian texture {
      solid color rgb <0.5, 0.2, 0>
    }
  }
}

object "room walls" {
  difference {
    difference {
      cube {
        <-5.1, -0.1, -5.1>
        <5.1, 8.1, 5.1>
      }
      cube {
        <-5, 0, -5>
        <5, 8, 5>
      }
    }
    // window hole
    cube {
      <4.9, 3, -1>
      <5.2, 5, 1>
    }
  }
  material {
    lambertian texture {
      solid color white
    }
  }
}

object "window glass" {
  cube {
    <5.0, 3, -1>
    <5.1, 5, 1>
  }
  material {
    dielectric ior 1.5
  }
}


object "golden ball" {
  sphere {
    origin <-1, 3, -3>
    radius 1.5
  }
  material {
    metal fuzz 0 texture {
      solid color rgb <0.8, 0.8, 0.1>
    }
  }
}
